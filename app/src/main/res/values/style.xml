<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button.Base" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/roboto_fonts_family</item>
        <item name="android:letterSpacing">0</item>
        <item name="rippleColor">@color/button_primary_ripple</item>
    </style>

    <style name="Button.Base.Transparent">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textAlignment">textStart</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/textLink</item>
        <item name="iconPadding">16dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Button.Base.Primary">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/backgroundDefaultButton</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Button.Circle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/textLink</item>
        <item name="rippleColor">@color/button_primary_ripple</item>
    </style>

    <style name="TextAppearance.Title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextAppearance.Body" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextAppearance.Body2" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textTertiary</item>
    </style>
</resources>